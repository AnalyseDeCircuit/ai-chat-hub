# 数据库配置
DATABASE_URL="postgresql://user:password@localhost:5432/aichat"

# JWT 认证配置
JWT_SECRET="your-secret-key-must-be-at-least-32-characters-long"
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-must-be-at-least-32-chars"
REFRESH_TOKEN_EXPIRES_IN="7d"

# 数据加密配置
ENCRYPTION_KEY="your-encryption-key-must-be-exactly-32-characters"

# 服务器配置
PORT=3000
NODE_ENV="development"
API_PREFIX="/api/v1"

# Redis 配置（可选）
# REDIS_URL="redis://localhost:6379"

# 限流配置
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# 日志配置
LOG_LEVEL="info"

# CORS 配置
CORS_ORIGIN="http://localhost:5173"
